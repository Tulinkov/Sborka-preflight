        <DockPanel x:Name="pListNewOrders" Grid.RowSpan="2" Style="{StaticResource style_FileChoiceDockPanel}"
                   Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                   IsVisibleChanged="pListNewOrders_IsVisibleChanged">
            <StackPanel DockPanel.Dock="Bottom" Height="40" HorizontalAlignment="Right" Orientation="Horizontal" Margin="15,0">
                <Button Content="Ok" Height="28" Margin="6,0" Padding="10,1" VerticalAlignment="Center" FontSize="14"
                        Command="{Binding BtnNewOrder_ClickCommand}"  CommandParameter="true" IsDefault="True" Focusable="False" />
                <Button Content="Cancel" Height="28" Margin="6,0" Padding="10,1" VerticalAlignment="Center" FontSize="14"
                        Command="{Binding BtnNewOrder_ClickCommand}"  CommandParameter="false" IsCancel="True" Focusable="False" />
            </StackPanel>
            <ListBox x:Name="lbListNewOrders" ItemTemplate="{StaticResource dataTemplate_ListNewOrders}" 
                     ItemsSource="{Binding Path=CorelDocker.ListNewOrder}" SelectedIndex="{Binding Path=CorelDocker.IndexOfSelectedOrder}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding BtnNewOrder_ClickCommand}" CommandParameter="true"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ItemContainerStyle>
                    <Style>
                        <Setter Property="Control.HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Control.Padding" Value="0" />
                        <Setter Property="Control.Margin" Value="0" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </DockPanel>
        <Border Grid.RowSpan="2" Background="#D84D4D4D" Style="{StaticResource style_WaitingPanel}">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFD1D1D1" FontSize="16">
                <Run FontWeight="Bold" Foreground="White" Text="{Binding CorelDocker.WaitingText}"/>
                <LineBreak /><LineBreak />
                <Run>Please wait...</Run>
            </TextBlock>
        </Border>
        <StackPanel Grid.RowSpan="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Visibility="{Binding IsChecked, ElementName=btnAdditionalMenu, Converter={StaticResource BoolToVis}}">
            <Grid Height="80" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Circle:" FontStyle="Italic" Grid.ColumnSpan="2" Margin="0,0,0,30.8" Grid.RowSpan="2" FontWeight="Bold" />
                <ToggleButton x:Name="btnAdditionalMenuClose" Grid.Column="4" Content="{StaticResource IconCloseMenu}" ToolTip="Additional menu" Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}" IsChecked="{Binding IsChecked, ElementName=btnAdditionalMenu}" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.RowSpan="2" Text="d = " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="1" Grid.RowSpan="2" Text="{Binding CorelDocker.Hole.Diameter}" VerticalAlignment="Center" Margin="22,0,0,0" HorizontalContentAlignment="Center" FontSize="14" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text=" ↑" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" FontFamily="Arial"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CorelDocker.Hole.Top, StringFormat={}{0:0.####}}" VerticalAlignment="Center" Margin="22,0,0,0" HorizontalContentAlignment="Center" FontSize="14" />
                <TextBlock Grid.Row="1" Grid.Column="2" Text=" ↓" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" FontFamily="Arial"/>
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CorelDocker.Hole.Bottom, StringFormat={}{0:0.####}}" VerticalAlignment="Center" Margin="22,0,0,0" HorizontalContentAlignment="Center" FontSize="14" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="←" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" FontFamily="Arial"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CorelDocker.Hole.Left, StringFormat={}{0:0.####}}" VerticalAlignment="Center" Margin="22,0,0,0" HorizontalContentAlignment="Center" FontSize="14" />
                <TextBlock Grid.Row="2" Grid.Column="2" Text="→" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" FontFamily="Arial"/>
                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CorelDocker.Hole.Right, StringFormat={}{0:0.####}}" VerticalAlignment="Center" Margin="22,0,0,0" HorizontalContentAlignment="Center" FontSize="14" />
                <Button Content="Draw circle" Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5" Command="{Binding BtnDrawCircle_ClickCommand}"/>
            </Grid>
            <Line Stroke="Gray" Stretch="UniformToFill" X2="1" Margin="10,0" />
            <Grid Height="80" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="18" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Cutline:" FontStyle="Italic" Grid.ColumnSpan="2" Margin="0,0,0,30.8" Grid.RowSpan="2" FontWeight="Bold" />
                <TextBlock Grid.Row="1" Text="Color name:" VerticalAlignment="Center" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CorelDocker.Cutline.ColorName}" VerticalAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" />
                <CheckBox Content="Remove dotted line" IsChecked="{Binding CorelDocker.Cutline.RemoveDottedLine}" Grid.Row="2" Grid.ColumnSpan="2" VerticalContentAlignment="Center" />
                <Button Content="Find and fix" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5" Command="{Binding BtnFixCutline_ClickCommand}"/>
            </Grid>
            <Line Stroke="Gray" Stretch="UniformToFill" X2="1" Margin="10,0" />
        </StackPanel>
    </Grid>
</UserControl>
