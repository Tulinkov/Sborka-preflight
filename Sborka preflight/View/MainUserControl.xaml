                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Content="TEXT" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           FontWeight="Bold" Foreground="{Binding BorderBrush, ElementName=iconText_Back}" FontFamily="Calibri" />
                </Border>
                <Border x:Name="iconEffect_Back" Grid.Row="3" Grid.Column="4" BorderThickness="2" CornerRadius="8" Margin="3">
