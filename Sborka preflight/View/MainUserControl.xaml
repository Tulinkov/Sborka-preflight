                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page1SizeIsCorrect}" Value="0">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page1Exist}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Content="SIZE" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
