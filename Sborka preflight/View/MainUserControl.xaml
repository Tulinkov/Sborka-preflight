<UserControl x:Class="SborkaPreflight.View.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ie="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions" 
             xmlns:model="clr-namespace:SborkaPreflight.Model"
             mc:Ignorable="d" d:DesignWidth="340" MinHeight="200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourcesMainUserControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="3">
            <Button x:Name="BtnOrderList" Content="{StaticResource IconAdd}" Command="{Binding BtnOrderList_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="New order" IsEnabled="{Binding Path=CorelDocker.NewOrderCanExecute, Mode=TwoWay}" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button x:Name="btnFitToPage" Content="{StaticResource IconFitToPage}" Command="{Binding BtnFitToPage_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="Fit to page" IsEnabled="{Binding Path=CorelDocker.FitToPageCanExecute, Mode=TwoWay}" />
            <Button x:Name="btnGuides" Content="{StaticResource IconGuides}" Command="{Binding BtnGuides_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="Make/remove guides" IsEnabled="{Binding Path=CorelDocker.MakeGuidesCanExecute, Mode=TwoWay}" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button x:Name="btnToPDF" Content="{StaticResource IconPDF}" Command="{Binding BtnToPDF_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="Publish to PDF" IsEnabled="{Binding Path=CorelDocker.ToPDFCanExecute, Mode=TwoWay}" />
            <Button x:Name="btnToCdr" Content="{StaticResource IconCorel}" Command="{Binding BtnToCDR_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="Save as v.17" IsEnabled="{Binding Path=CorelDocker.ToPDFCanExecute, Mode=TwoWay}" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button x:Name="btnToPrepress" Content="{StaticResource IconTick}" Command="{Binding BtnToPrepress_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="To prepress" IsEnabled="{Binding Path=CorelDocker.ToPrepressCanExecute, Mode=TwoWay}" />
            <Button x:Name="btnToUser" Content="{StaticResource IconCross}" Command="{Binding BtnToUser_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="To user" IsEnabled="{Binding Path=CorelDocker.ToUserCanExecute, Mode=TwoWay}" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button x:Name="btnUpdate" Content="{StaticResource IconUpdate}" Command="{Binding BtnUpdate_ClickCommand}"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}"
                    ToolTip="Update verification" IsEnabled="{Binding Path=CorelDocker.ToUserCanExecute, Mode=TwoWay}" />
            <ToggleButton x:Name="btnAdditionalMenu" Content="{StaticResource IconMenu}" ToolTip="Additional menu"
                    Template="{StaticResource template_ToolBoxButton}" Style="{StaticResource style_ToolBoxButton}" IsEnabled="{Binding Path=CorelDocker.AditionalMenuCanExecute, Mode=OneWay}" IsEnabledChanged="btnAdditionalMenu_IsEnabledChanged" />
        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right" Width="5" Background="Black" Height="5" VerticalAlignment="Top">
            <StackPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Setting" Command="{Binding BtnSetting_ClickCommand}"/>
                </ContextMenu>
            </StackPanel.ContextMenu>
        </StackPanel>
        <Grid Grid.Row="1" Style="{StaticResource style_GridInfo}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="107*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Margin="3" HorizontalAlignment="Center" >
                <Button x:Name="btnNumberCustomer" Content="{Binding CorelDocker.OpenedOrder.NumberCustomer}" Cursor="Hand" Focusable="False" Padding="0"
                        FontWeight="Bold" FontSize="17" Style="{StaticResource style_OrderNumber}" VerticalContentAlignment="Bottom"
                        Command="{Binding Copy}" CommandParameter="{Binding Content, ElementName=btnNumberCustomer}" Foreground="Red" />
                <Label FontWeight="Bold" FontSize="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"
                       Padding="0" Foreground="Red">
                    <Label.Style>
                        <Style>
                            <Setter Property="Label.Content" Value="-" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder}" Value="{x:Null}">
                                    <Setter Property="Label.Content" Value="" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                <Button x:Name="btnNumberOrder" Content="{Binding CorelDocker.OpenedOrder.NumberOrder}" Cursor="Hand" Focusable="False" Padding="0"
                        FontWeight="Bold" FontSize="17" Style="{StaticResource style_OrderNumber}" VerticalContentAlignment="Bottom"
                        Command="{Binding Copy}" CommandParameter="{Binding Content, ElementName=btnNumberOrder}" Foreground="Red" />
            </StackPanel>
            <Label Grid.Row="1" Content="{Binding CorelDocker.OpenedOrder.DocumentSize}" FontSize="13" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"
                       Padding="30,0,0,0" FontStyle="Italic" FontWeight="Bold" />
            <Label Grid.Row="1" Grid.Column="1" Content="{Binding CorelDocker.OpenedOrder.Colored}" FontSize="13" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"
                       Padding="0,0,30,0" FontStyle="Italic" FontWeight="Bold" />
            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="5,10,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="FACE" HorizontalAlignment="Center" VerticalAlignment="Top" />
                    <Button x:Name="btnFaceFile" Content="{Binding CorelDocker.OpenedOrder.Page1Extension, Mode=OneWay}" Cursor="Hand" Focusable="False" Padding="0"
                        Style="{StaticResource style_OrderNumber}" VerticalContentAlignment="Bottom" IsEnabled="True" VerticalAlignment="Top"
                        Command="{Binding BtnSideOpen_ClickCommand}" CommandParameter="face"/>
                </StackPanel>
                <StackPanel Grid.ColumnSpan="2" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="BACK" HorizontalAlignment="Center" VerticalAlignment="Top" />
                    <Button x:Name="btnBackFile" Content="{Binding CorelDocker.OpenedOrder.Page2Extension, Mode=OneWay}" Cursor="Hand" Focusable="False" Padding="0"
                        Style="{StaticResource style_OrderNumber}" VerticalContentAlignment="Bottom" IsEnabled="True" VerticalAlignment="Top"
                        Command="{Binding BtnSideOpen_ClickCommand}" CommandParameter="back"/>
                </StackPanel>
                <Border x:Name="iconCenter_Face" Grid.Row="1" BorderThickness="2" CornerRadius="8" Margin="3">
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page1IsCentered}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page1IsCentered}" Value="true">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page1Exist}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
