                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page1Resolution}" Value="{x:Null}">
                                        <Setter Property="Label.Content" Value="DPI" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Border>
                <Border x:Name="iconColorMode_Face" Grid.Row="2" Grid.Column="1" BorderThickness="2" CornerRadius="8" Margin="3" ToolTip="sldkslkfssf">
                    <Border.Style>
                        <Style>
