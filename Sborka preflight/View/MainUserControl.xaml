                                        <Setter Property="Label.Content" Value="CMYK" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Border>
                <Border x:Name="iconText_Back" Grid.Row="3" Grid.Column="3" BorderThickness="2" CornerRadius="8" Margin="3">
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                            <Style.Triggers>
