                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Content="EFFECT" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           FontWeight="Bold" Foreground="{Binding BorderBrush, ElementName=iconEffect_Face}" FontFamily="Calibri" />
                </Border>
                <Border x:Name="iconCenter_Back" Grid.Row="1" Grid.Column="3" BorderThickness="2" CornerRadius="8" Margin="3">
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2IsCentered}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2IsCentered}" Value="true">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2Exist}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Content="CENTER" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           FontWeight="Bold" Foreground="{Binding BorderBrush, ElementName=iconCenter_Back}" FontFamily="Calibri" />
                </Border>
                <Border x:Name="iconSize_Back" Grid.Row="1" Grid.Column="4" BorderThickness="2" CornerRadius="8" Margin="3">
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2SizeIsCorrect}" Value="2">
                                    <Setter Property="Border.BorderBrush" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2SizeIsCorrect}" Value="1">
                                    <Setter Property="Border.BorderBrush" Value="#FFFFDC00" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2SizeIsCorrect}" Value="0">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2Exist}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Content="SIZE" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           FontWeight="Bold" Foreground="{Binding BorderBrush, ElementName=iconSize_Back}" FontFamily="Calibri" />
                </Border>
                <Border x:Name="iconResolution_Back" Grid.Row="2" Grid.Column="3" BorderThickness="2" CornerRadius="8" Margin="3" ToolTip="sldkslkfssf">
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ResolutionIsCorrect}" Value="2">
                                    <Setter Property="Border.BorderBrush" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ResolutionIsCorrect}" Value="1">
                                    <Setter Property="Border.BorderBrush" Value="#FFFFDC00" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ResolutionIsCorrect}" Value="0">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2Exist}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           FontWeight="Bold" Foreground="{Binding BorderBrush, ElementName=iconResolution_Back}" FontFamily="Calibri">
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Content" Value="{Binding Path=CorelDocker.OpenedOrder.Page2Resolution}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2Resolution}" Value="">
                                        <Setter Property="Label.Content" Value="DPI" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2Resolution}" Value="{x:Null}">
                                        <Setter Property="Label.Content" Value="DPI" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Border>
                <Border x:Name="iconColorMode_Back" Grid.Row="2" Grid.Column="4" BorderThickness="2" CornerRadius="8" Margin="3" ToolTip="sldkslkfssf">
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="Red" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ColorMode}" Value="CMYK">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ColorMode}" Value="Gray">
                                    <Setter Property="Border.BorderBrush" Value="LimeGreen" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ColorMode}" Value="non">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ColorMode}" Value="{x:Null}">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2Exist}" Value="false">
                                    <Setter Property="Border.BorderBrush" Value="#FFC3C3C3" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           FontWeight="Bold" Foreground="{Binding BorderBrush, ElementName=iconColorMode_Back}" FontFamily="Calibri">
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Content" Value="{Binding Path=CorelDocker.OpenedOrder.Page2ColorMode}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=CorelDocker.OpenedOrder.Page2ColorMode}" Value="non">
